<% unless current_user.podcast.episodes.empty? %>
  <li class="dropdown <%= 'active' if current_page?(episodes_path) %>">
    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
      Episodes <span class="caret"></span>
    </a>
    <ul class="dropdown-menu" role="menu">
      <li><%= link_to "Add a new episode", episodes_path %></li>
      <li class="divider">
      <% current_user.podcast.episodes.each do |episode| %>
        <li><%= link_to episode.name, episode_path(episode) %></li>
      <% end %>
    </ul>
  </li>
<% else %>
  <li class="<%= 'active' if current_page?(episodes_path) %>"><%= link_to "Episodes", episodes_path %></li>
<% end %>
