<% if @podcast.recent %>
  <h1>Welcome to Filter <%= "Pro" if current_user.subscribed %>!</h1>
<% end %>

<h2><%= link_to "Edit podcast", edit_podcast_path(@podcast) %></h2>

<% if @episodes.empty? %>
  <h2>You have no episodes currently added to your podcast.</h2>
  <h2><%= link_to "Add episodes", episodes_path %></h2>
<% elsif %>
  <% @episodes.each do |episode| %>
    <h3><%= episode.name %></h3>
  <% end %>
<% end %>
